<div data-controller="meal-date" class="max-w-4xl mx-auto px-4 py-8">

  <div class="flex justify-center items-center mb-6 gap-4 text-2xl font-bold text-base-content">
    <button data-action="click->meal-date#prev" class="btn btn-ghost btn-sm">←</button>

    <h1 class="text-center" data-meal-date-target="dateDisplay">
      <%= @date.strftime("%B %-d, %Y") %>
    </h1>

    <button data-action="click->meal-date#next" class="btn btn-ghost btn-sm">→</button>
  </div>

  <%= link_to "Add a Meal", new_meal_path(date: @date), 
    class: "btn btn-primary mb-6 inline-block", 
    data: { 
      turbo_frame: "_top", 
      meal_date_target: "dateLink" 
    } %>

  <%= render partial: "daily_totals", locals: { date: @date } %>
  
  <%= render partial: "daily_meals", locals: { meals: @meals } %>

</div>