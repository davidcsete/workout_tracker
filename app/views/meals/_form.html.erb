<%= form_with(model: meal, class: "contents") do |form| %>
  <% if meal.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul class="list-disc ml-6">
        <% meal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": meal.errors[:name].none?, "border-red-400 focus:outline-red-600": meal.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :meal_type %>
    <%= form.number_field :meal_type, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": meal.errors[:meal_type].none?, "border-red-400 focus:outline-red-600": meal.errors[:meal_type].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :consumed_at %>
    <%= form.datetime_field :consumed_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": meal.errors[:consumed_at].none?, "border-red-400 focus:outline-red-600": meal.errors[:consumed_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": meal.errors[:user_id].none?, "border-red-400 focus:outline-red-600": meal.errors[:user_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
