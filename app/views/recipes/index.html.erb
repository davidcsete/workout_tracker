<div class="min-h-screen bg-gradient-to-br from-base-100 to-base-200 pb-20">
  <!-- Header Section -->
  <div class="hero bg-gradient-to-r from-accent to-secondary text-accent-content py-6 sm:py-8">
    <div class="hero-content text-center max-w-4xl px-4">
      <div class="w-full">
        <h1 class="text-2xl sm:text-3xl font-bold mb-4 transition-all duration-700 ease-out animate-fade-in-down" data-controller="heading-animation">Recipe Collection</h1>
        <p class="text-base sm:text-lg opacity-90 mb-4">Discover, create, and share delicious recipes</p>
        <%= link_to new_recipe_path, class: "btn btn-primary btn-lg" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Create Recipe
        <% end %>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-6 max-w-6xl">
    <!-- Search Section -->
    <div class="card bg-base-100 shadow-lg mb-6 transition-all duration-500 ease-out hover:shadow-xl animate-fade-in-up">
      <div class="card-body p-4 sm:p-6">
        <%= form_with url: recipes_path, method: :get, local: true, class: "form-control" do |form| %>
          <div class="input-group">
            <%= form.text_field :search, placeholder: "Search recipes...", value: params[:search], 
                class: "input input-bordered w-full" %>
            <%= form.submit "Search", class: "btn btn-square" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
      <div class="stat bg-base-100 shadow-lg rounded-lg transition-all duration-500 ease-out hover:shadow-xl hover:scale-105 animate-fade-in-up">
        <div class="stat-figure text-primary">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
        </div>
        <div class="stat-title">My Recipes</div>
        <div class="stat-value text-primary"><%= @my_recipes.count %></div>
        <div class="stat-desc">Created by you</div>
      </div>
      
      <div class="stat bg-base-100 shadow-lg rounded-lg transition-all duration-500 ease-out hover:shadow-xl hover:scale-105 animate-fade-in-up">
        <div class="stat-figure text-secondary">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <div class="stat-title">Public Recipes</div>
        <div class="stat-value text-secondary"><%= @public_recipes.count %></div>
        <div class="stat-desc">Available to copy</div>
      </div>
    </div>

    <!-- My Recipes Section -->
    <div class="mb-8">
      <div class="flex items-center gap-3 mb-6">
        <h2 class="text-2xl font-bold transition-all duration-600 ease-out animate-fade-in-left">My Recipes</h2>
        <div class="badge badge-primary"><%= @my_recipes.count %></div>
      </div>
      
      <% if @my_recipes.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @my_recipes.each do |recipe| %>
            <%= render 'recipe_card', recipe: recipe, show_copy: false %>
          <% end %>
        </div>
      <% else %>
        <div class="hero bg-base-200 rounded-2xl transition-all duration-500 ease-out hover:shadow-lg animate-fade-in-up">
          <div class="hero-content text-center py-12">
            <div class="max-w-md">
              <div class="text-6xl mb-4">ğŸ‘¨â€ğŸ³</div>
              <h3 class="text-xl font-bold transition-all duration-500 ease-out">No recipes yet</h3>
              <p class="py-4">Start your culinary journey by creating your first recipe!</p>
              <%= link_to "Create your first recipe", new_recipe_path, class: "btn btn-primary transition-all duration-300 ease-out hover:scale-105" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Public Recipes Section -->
    <div>
      <div class="flex items-center gap-3 mb-6">
        <h2 class="text-2xl font-bold transition-all duration-600 ease-out animate-fade-in-left">Public Recipes</h2>
        <div class="badge badge-secondary"><%= @public_recipes.count %></div>
      </div>
      
      <% if @public_recipes.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @public_recipes.each do |recipe| %>
            <%= render 'recipe_card', recipe: recipe, show_copy: true %>
          <% end %>
        </div>
      <% else %>
        <div class="hero bg-base-200 rounded-2xl transition-all duration-500 ease-out hover:shadow-lg animate-fade-in-up">
          <div class="hero-content text-center py-12">
            <div class="max-w-md">
              <div class="text-6xl mb-4">ğŸ”</div>
              <h3 class="text-xl font-bold transition-all duration-500 ease-out">No public recipes found</h3>
              <p class="py-4">Be the first to share a recipe with the community!</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Floating Action Button -->
  <%= link_to new_recipe_path, 
      class: "fixed bottom-20 right-4 z-40 btn btn-primary btn-circle btn-lg shadow-lg hover:shadow-xl transition-all duration-300",
      title: "Create New Recipe" do %>
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
    </svg>
  <% end %>
</div>