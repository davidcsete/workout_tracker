<% content_for :title, "Showing exercise" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing exercise</h1>

  <%= render @exercise %>

  <%= link_to "Edit this exercise", edit_exercise_path(@exercise), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-500 hover:bg-gray-400 inline-block font-medium" %>
  <%= link_to "Back to exercises", exercises_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-500 hover:bg-gray-400 inline-block font-medium" %>
  <%= button_to "Destroy this exercise", @exercise, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
