<div class="card bg-base-100 shadow-lg hover:shadow-xl transition-all duration-300 border border-base-300 hover:border-primary/30 overflow-hidden touch-manipulation w-full"
     data-exercise-id="<%= exercise.id %>"
     data-workout-exercises-target="exerciseCard"
     data-controller="card-animation"
     data-card-animation-target="card"
     draggable="true"
     data-action="dragstart->workout-exercises#startDrag dragend->workout-exercises#endDrag"
     ondragover="event.preventDefault()"
     data-action="drop->workout-exercises#drop">
  <div class="card-body p-3 overflow-hidden relative">
    <!-- Completion Status Badge -->
    <% completed_today = exercise.exercise_trackings.where(performed_at: Date.current.beginning_of_day..Date.current.end_of_day).any? %>
    <% if completed_today %>
      <div class="absolute top-1 right-1 z-10">
        <div class="badge badge-success badge-xs text-xs">
          <svg class="w-2 h-2 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Done
        </div>
      </div>
    <% end %>

    <!-- Exercise Header -->
    <div class="flex items-start justify-between mb-2">
      <div class="flex-1 min-w-0">
        <h3 class="font-bold text-sm leading-tight mb-1 truncate pr-2"><%= exercise.name %></h3>
        <div class="flex items-center gap-1 mb-2">
          <% latest_tracking = exercise.exercise_trackings.order(created_at: :desc).first %>
          <% if latest_tracking %>
            <div class="badge badge-success badge-xs text-xs">Last:</div>
            <span class="text-xs"><%= total_sessions = exercise.exercise_trackings.count %> sessions</span>
          <% else %>
            <div class="badge badge-ghost badge-xs text-xs">Not tracked</div>
          <% end %>
        </div>
      </div>
      
      <!-- Quick Stats -->
      <div class="text-right flex-shrink-0">
        <% if latest_tracking %>
          <div class="text-sm font-bold text-primary"><%= latest_tracking.weight %>kg Ã— <%= latest_tracking.reps %></div>
        <% end %>
      </div>
    </div>

    <!-- Description -->
    <% if exercise.description.present? %>
      <p class="text-xs text-base-content/70 mb-2 line-clamp-2 break-words">
        <%= exercise.description %>
      </p>
    <% end %>

    <!-- Progress Indicator -->
    <% if latest_tracking %>
      <div class="mb-3">
        <div class="flex justify-between text-xs text-base-content/70 mb-1">
          <span>Recent Progress</span>
          <span><%= latest_tracking.performed_at ? "#{time_ago_in_words(latest_tracking.performed_at)} ago" : "No date" %></span>
        </div>
        <div class="flex items-center gap-2">
          <div class="flex-1 bg-base-200 rounded-full h-2">
            <% progress_percentage = [((latest_tracking.weight || 0) / 100.0 * 100), 100].min %>
            <div class="bg-gradient-to-r from-primary to-secondary h-2 rounded-full transition-all duration-500" 
                 style="width: <%= progress_percentage %>%"></div>
          </div>
          <span class="text-xs font-bold text-primary"><%= latest_tracking.weight || 0 %>kg</span>
        </div>
      </div>
    <% end %>

    <!-- Action Buttons -->
    <% unless params[:action] == "edit" %>
      <div class="card-actions w-full">
        <% if workout_plan.user == current_user %>
          <div class="flex gap-1 w-full">
            <%= link_to new_workout_plan_exercise_exercise_tracking_path(workout_plan, exercise), 
                data: { 
                  turbo_frame: "_top",
                  action: "click->workout-exercises#quickTrack",
                  workout_exercises_exercise_id_param: exercise.id
                }, 
                class: "btn btn-primary btn-sm flex-1 text-xs" do %>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              <span class="hidden sm:inline ml-1">Track</span>
            <% end %>
            
            <%= link_to edit_workout_plan_exercise_path(workout_plan, exercise), 
                data: { turbo_frame: "_top" }, 
                class: "btn btn-info btn-sm btn-outline" do %>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              <span class="hidden sm:inline ml-1">Edit</span>
            <% end %>
            
            <% workout_plan_exercise = workout_plan.workout_plan_exercises.find_by(exercise: exercise) %>
            <% if workout_plan_exercise %>
              <%= link_to workout_plan_workout_plan_exercise_path(workout_plan, workout_plan_exercise), 
                  data: { 
                    "turbo-method": "delete",
                    "turbo-confirm": "Remove '#{exercise.name}' from this workout plan?",
                    "action": "click->workout-exercises#deleteExercise"
                  }, 
                  class: "btn btn-error btn-sm btn-outline" do %>
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                <span class="hidden sm:inline ml-1">Del</span>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
  /* Better line clamping for mobile */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Ensure cards fit within containers */
  .card {
    max-width: 100%;
    box-sizing: border-box;
  }
  
  /* Ensure all text content respects container bounds */
  .card-body * {
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  /* Touch feedback for better mobile interaction */
  [draggable="true"]:active {
    transform: scale(0.98);
    transition: transform 0.1s ease;
  }

  /* Deletion animation */
  .deleting {
    animation: slideOutRight 0.3s ease-out forwards;
  }

  @keyframes slideOutRight {
    0% {
      transform: translateX(0) scale(1);
      opacity: 1;
    }
    100% {
      transform: translateX(100%) scale(0.8);
      opacity: 0;
    }
  }
</style>