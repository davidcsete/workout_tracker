<div class="min-h-screen flex items-center justify-center bg-base-200 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-base-content">Create your account</h2>
      <p class="mt-2 text-sm text-base-content/70">Join us today and get started</p>
    </div>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6") do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-control">
            <%= f.label :username, class: "label" do %>
              <span class="label-text font-medium">Username</span>
            <% end %>
            <%= f.text_field :username, 
                autofocus: true, 
                autocomplete: "username",
                class: "input input-bordered w-full",
                placeholder: "Choose a username" %>
          </div>

          <div class="form-control">
            <%= f.label :email, class: "label" do %>
              <span class="label-text font-medium">Email address</span>
            <% end %>
            <%= f.email_field :email, 
                autocomplete: "email",
                class: "input input-bordered w-full",
                placeholder: "Enter your email" %>
          </div>

          <div class="form-control">
            <%= f.label :password, class: "label" do %>
              <span class="label-text font-medium">Password</span>
              <% if @minimum_password_length %>
                <span class="label-text-alt text-base-content/60">
                  (<%= @minimum_password_length %> characters minimum)
                </span>
              <% end %>
            <% end %>
            <%= f.password_field :password, 
                autocomplete: "new-password",
                class: "input input-bordered w-full",
                placeholder: "Create a password" %>
          </div>

          <div class="form-control">
            <%= f.label :password_confirmation, class: "label" do %>
              <span class="label-text font-medium">Confirm password</span>
            <% end %>
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password",
                class: "input input-bordered w-full",
                placeholder: "Confirm your password" %>
          </div>

          <div class="form-control mt-6">
            <%= f.submit "Create account", class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="divider">or</div>
        
        <div class="form-control mb-4">
          <%= render "shared/google_oauth_button" %>
        </div>
        
        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
