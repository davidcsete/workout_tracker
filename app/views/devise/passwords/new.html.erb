<div class="min-h-screen flex items-center justify-center bg-base-200 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-base-content" data-controller="heading-animation">Forgot your password?</h2>
      <p class="mt-2 text-sm text-base-content/70">Enter your email and we'll send you reset instructions</p>
    </div>

    <div class="card bg-base-100 shadow-xl" data-controller="card-animation">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "space-y-6") do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-control">
            <%= f.label :email, class: "label" do %>
              <span class="label-text font-medium">Email address</span>
            <% end %>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                class: "input input-bordered w-full",
                placeholder: "Enter your email address" %>
          </div>

          <div class="form-control mt-6">
            <%= f.submit "Send reset instructions", class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="divider">or</div>
        
        <div class="text-center space-y-2">
          <%= render "devise/shared/links" %>
          <%= link_to "Back to Login", new_session_path(resource_name), class: "btn btn-ghost btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
