<% content_for :title, "Exercise trackings" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center my-4">
    <h1 class="font-bold text-4xl">Exercise trackings</h1>
    <%= link_to "Back to tracking", new_exercise_tracking_path(workout_plan_id: @workout_plan.id, exercise_id: @exercise.id), class: "btn btn-accent px-3.5 py-2.5 block font-medium" %>
  </div>

  <div id="exercise_trackings" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @exercise_trackings.any? %>
      <% @exercise_trackings.each_with_index do |exercise_tracking, index| %>
        <div class="card bg-base-100 shadow-lg mb-4">
          <div class="card-body">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
              <div class="flex-1">
                <h2 class="card-title text-primary mb-2">Exercise: <%= exercise_tracking.exercise.name %></h2>
                <%= render exercise_tracking %>
              </div>
              <div class="card-actions justify-end">
                <div class="flex flex-col sm:flex-row gap-2">
                  <%= link_to "Show", exercise_tracking, class: "btn btn-info btn-sm" %>
                  <%= link_to "Edit", edit_exercise_tracking_path(exercise_tracking,workout_plan_id: @workout_plan.id, exercise_id: @exercise.id), class: "btn btn-accent btn-sm" %>
                  <%= button_to "Destroy", exercise_tracking, method: :delete, class: "btn btn-secondary btn-sm", data: { turbo_confirm: "Are you sure?" } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No exercise trackings found.</p>
    <% end %>
  </div>
</div>
