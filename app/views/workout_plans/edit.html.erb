<div class="container mx-auto p-4">
  <% content_for :title, "Editing #{@workout_plan.name}" %>

  <!-- Breadcrumbs -->
  <div class="breadcrumbs text-sm mb-8">
    <ul>
      <li><%= link_to "Workout Plans", workout_plans_path, class: "link link-hover" %></li>
      <li><%= link_to @workout_plan.name, workout_plan_exercises_path(@workout_plan), class: "link link-hover" %></li>
      <li>Edit Plan</li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Left Column - Form -->
    <div class="lg:col-span-1">
      <%= render "form", workout_plan: @workout_plan %>
      
      <!-- Quick Actions -->
      <div class="mt-6">
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h3 class="card-title text-lg mb-4">
              <div class="badge badge-secondary">Actions</div>
            </h3>
            <div class="join join-vertical w-full">
              <%= link_to workout_plan_exercises_path(@workout_plan), 
                  class: "btn btn-outline join-item justify-start gap-3" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                View All Exercises
              <% end %>
              
              <%= link_to new_workout_plan_exercise_path(@workout_plan), 
                  class: "btn btn-primary join-item justify-start gap-3" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add New Exercise
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column - Exercise Preview -->
    <div class="lg:col-span-2">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <div class="flex items-center justify-between mb-6">
            <h3 class="card-title text-xl">
              <div class="badge badge-primary badge-lg">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
              </div>
              Exercise Overview
            </h3>
            <div class="stats shadow">
              <div class="stat place-items-center">
                <div class="stat-value text-primary"><%= @workout_plan.exercises.count %></div>
                <div class="stat-desc">Total Exercises</div>
              </div>
            </div>
          </div>

          <% if @workout_plan.exercises.any? %>
            <!-- Exercise List -->
            <div class="space-y-4 max-h-96 overflow-y-auto">
              <% @workout_plan.exercises.each do |exercise| %>
                <turbo-frame id="exercise_<%= exercise.id %>">
                  <div class="card bg-base-200 shadow-sm hover:shadow-md transition-shadow">
                    <div class="card-body p-4">
                      <div class="flex items-center justify-between">
                        <div class="flex-1">
                          <h4 class="card-title text-base"><%= exercise.name %></h4>
                          <p class="text-sm opacity-70 mt-1">
                            <%= exercise.description %>
                          </p>
                          
                          <% latest_tracking = exercise.exercise_trackings.order(created_at: :desc).first %>
                          <% if latest_tracking %>
                            <div class="flex items-center gap-2 mt-2">
                              <div class="badge badge-outline badge-sm">
                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                                </svg>
                                <%= latest_tracking.reps %> reps √ó <%= latest_tracking.weight %>kg
                              </div>
                              <span class="text-xs opacity-60">
                                <%= time_ago_in_words(latest_tracking.performed_at) %> ago
                              </span>
                            </div>
                          <% end %>
                        </div>
                        
                        <div class="card-actions">
                          <%= link_to new_workout_plan_exercise_exercise_tracking_path(@workout_plan, exercise), 
                              class: "btn btn-success btn-sm gap-1" do %>
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                            Track
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </turbo-frame>
              <% end %>
            </div>
          <% else %>
            <!-- Empty State -->
            <div class="hero bg-base-200 rounded-box">
              <div class="hero-content text-center">
                <div class="max-w-md">
                  <div class="text-6xl mb-4">üèãÔ∏è</div>
                  <h1 class="text-2xl font-bold">No exercises yet</h1>
                  <p class="py-6">Start building your workout by adding some exercises to this plan.</p>
                  <%= link_to "Add Your First Exercise", new_workout_plan_exercise_path(@workout_plan), 
                      class: "btn btn-primary btn-lg gap-2" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Add Exercise
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
