<div class="min-h-screen bg-base-200">
  <% content_for :title, "Editing #{@workout_plan.name}" %>

  <!-- Flash Messages -->
  <div id="flash-messages" class="px-4 pt-4"></div>

  <!-- Mobile Header -->
  <div class="bg-base-100 shadow-sm">
    <div class="container mx-auto px-4 py-4">
      <!-- Breadcrumbs - Hidden on mobile, shown on tablet+ -->
      <div class="breadcrumbs text-sm mb-4 hidden sm:block">
        <ul>
          <li><%= link_to "Workout Plans", workout_plans_path, class: "link link-hover" %></li>
          <li><%= link_to @workout_plan.name, workout_plan_exercises_path(@workout_plan), class: "link link-hover" %></li>
          <li>Edit Plan</li>
        </ul>
      </div>
      
      <!-- Mobile Title -->
      <div class="flex items-center justify-between">
        <div class="flex-1 min-w-0">
          <h1 class="text-xl sm:text-2xl font-bold truncate">
            Editing <%= @workout_plan.name %>
          </h1>
          <div class="text-sm opacity-60 mt-1">
            <%= pluralize(@workout_plan.workout_plan_exercises.count, 'exercise') %> total
          </div>
        </div>
        
        <!-- Mobile Quick Add Button -->
        <div class="sm:hidden ml-4">
          <%= link_to new_workout_plan_exercise_path(@workout_plan), 
              class: "w-10 h-10 rounded-full bg-primary hover:bg-primary-focus text-white flex items-center justify-center" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-6">
    <div class="flex flex-col lg:flex-row gap-6">
      
      <!-- Right Column - Exercise Preview (Mobile: First, Desktop: 2/3) -->
      <div class="w-full lg:w-2/3 order-1 lg:order-2 min-w-0">
        <div class="card bg-base-100 shadow-lg min-w-0">
          <div class="card-body p-4 sm:p-6 min-w-0">
            <!-- Header - Responsive -->
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-4">
              <h3 class="card-title text-lg sm:text-xl">
                <div class="badge badge-primary badge-lg">
                  <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                  </svg>
                </div>
                <span class="hidden sm:inline">Exercise Overview</span>
                <span class="sm:hidden">Exercises</span>
              </h3>
              <div class="stats shadow stats-vertical sm:stats-horizontal">
                <div class="stat place-items-center py-2 px-4">
                  <div class="stat-value text-primary text-2xl sm:text-3xl"><%= @workout_plan.workout_plan_exercises.count %></div>
                  <div class="stat-desc text-xs">Total Exercises</div>
                </div>
              </div>
            </div>

            <% if @workout_plan.workout_plan_exercises.any? %>
              <!-- Exercise List Grouped by Day -->
              <div class="space-y-3 sm:space-y-6 max-h-[60vh] sm:max-h-96 overflow-y-auto w-full">
                <% 
                  # Custom day ordering: Monday first, Sunday last
                  day_order = ['monday', 'tuesday', 'wednesday', 'thursday', 'friday', 'saturday', 'sunday']
                  grouped_exercises = @workout_plan.workout_plan_exercises.group_by(&:day_of_the_week)
                  sorted_days = day_order.select { |day| grouped_exercises.key?(day) }
                %>
                <% sorted_days.each do |day| %>
                  <% workout_plan_exercises = grouped_exercises[day] %>
                  <div class="space-y-2 sm:space-y-3">
                    <!-- Day Header -->
                    <div class="flex items-center gap-2 sm:gap-3 sticky top-0 bg-base-100 py-1 sm:py-2 z-10">
                      <div class="badge badge-primary badge-sm sm:badge-lg">
                        <%= day.capitalize %>
                      </div>
                      <div class="text-xs sm:text-sm opacity-60">
                        <%= pluralize(workout_plan_exercises.count, 'exercise') %>
                      </div>
                    </div>
                    
                    <!-- Exercises for this day -->
                    <div class="space-y-1 sm:space-y-2 ml-1 sm:ml-4 w-full">
                      <% workout_plan_exercises.each do |workout_plan_exercise| %>
                        <% exercise = workout_plan_exercise.exercise %>
                        <div class="card bg-base-200 shadow-sm hover:shadow-md transition-shadow w-full">
                          <div class="card-body p-2 sm:p-4">
                            <!-- Mobile & Desktop: Flex layout -->
                            <div class="flex flex-col">
                              <div class="flex-1 min-w-0">
                                <turbo-frame id="workout_plan_exercise_<%= workout_plan_exercise.id %>">
                                  <div class="flex items-start justify-between gap-2">
                                    <div class="flex-1 min-w-0">
                                      <h4 class="card-title text-sm sm:text-base truncate leading-tight"><%= exercise.name %></h4>
                                      <p class="text-xs opacity-70 mt-1 overflow-hidden leading-tight" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                                        <%= exercise.description %>
                                      </p>
                                    </div>
                                  </div>
                                  
                                  <% latest_tracking = exercise.exercise_trackings.order(created_at: :desc).first %>
                                  <% if latest_tracking %>
                                    <div class="flex items-center gap-2 mt-2">
                                      <div class="badge badge-outline badge-sm">
                                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                                        </svg>
                                        <span class="text-xs sm:text-sm font-medium"><%= latest_tracking.reps %> reps √ó <%= latest_tracking.weight %>kg</span>
                                      </div>
                                      <span class="text-xs opacity-60">
                                        <% if latest_tracking.performed_at.present? %>
                                          <%= time_ago_in_words(latest_tracking.performed_at) %> ago
                                        <% else %>
                                          No date recorded
                                        <% end %>
                                      </span>
                                    </div>
                                  <% end %>
                                </turbo-frame>
                              </div>
                              
                              <!-- Mobile Action Buttons - New Line, Right Aligned -->
                              <div class="flex gap-1 justify-end mt-3 sm:hidden">
                                <%= link_to new_workout_plan_exercise_exercise_tracking_path(@workout_plan, exercise), 
                                    class: "btn btn-success btn-circle btn-sm", 
                                    title: "Track Exercise",
                                    data: { turbo_frame: "_top" } do %>
                                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                  </svg>
                                <% end %>
                                
                                <%= link_to workout_plan_workout_plan_exercise_path(@workout_plan, workout_plan_exercise), 
                                    method: :delete,
                                    data: { 
                                      confirm: "Are you sure you want to remove #{exercise.name} from this workout plan?",
                                      turbo_method: :delete,
                                      turbo_frame: "workout_plan_exercise_#{workout_plan_exercise.id}"
                                    },
                                    class: "btn btn-error btn-circle btn-sm",
                                    title: "Delete Exercise" do %>
                                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                  <% end %>
                              </div>
                            </div>
                            
                            <!-- Desktop Action Buttons - Bottom -->
                            <div class="hidden sm:flex gap-2 justify-end mt-3">
                              <%= link_to new_workout_plan_exercise_exercise_tracking_path(@workout_plan, exercise), 
                                  class: "btn btn-success btn-sm gap-1",
                                  data: { turbo_frame: "_top" } do %>
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                </svg>
                                Track
                              <% end %>
                              
                              <%= link_to workout_plan_workout_plan_exercise_path(@workout_plan, workout_plan_exercise), 
                                  method: :delete,
                                  data: { 
                                    confirm: "Are you sure you want to remove #{exercise.name} from this workout plan?",
                                    turbo_method: :delete,
                                    turbo_frame: "workout_plan_exercise_#{workout_plan_exercise.id}"
                                  },
                                  class: "btn btn-error btn-sm gap-1" do %>
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                                Delete
                              <% end %>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <!-- Empty State -->
              <div class="hero bg-base-200 rounded-box min-h-[40vh]">
                <div class="hero-content text-center">
                  <div class="max-w-md">
                    <div class="text-4xl sm:text-6xl mb-4">üèãÔ∏è</div>
                    <h1 class="text-xl sm:text-2xl font-bold">No exercises yet</h1>
                    <p class="py-4 sm:py-6 text-sm sm:text-base">Start building your workout by adding some exercises to this plan.</p>
                    <%= link_to "Add Your First Exercise", new_workout_plan_exercise_path(@workout_plan), 
                        class: "btn btn-primary btn-sm sm:btn-lg gap-2" do %>
                      <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                      </svg>
                      Add Exercise
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Left Column - Form (Mobile: Second, Desktop: 1/3) -->
      <div class="w-full lg:w-1/3 order-2 lg:order-1">
        <!-- Form Card -->
        <div class="card bg-base-100 shadow-lg">
          <div class="card-body p-4 sm:p-6">
            <%= render "form", workout_plan: @workout_plan %>
          </div>
        </div>
        
        <!-- Quick Actions - Hidden on mobile, shown on desktop -->
        <div class="mt-6 hidden sm:block">
          <div class="card bg-base-100 shadow-lg">
            <div class="card-body p-4 sm:p-6">
              <h3 class="card-title text-base sm:text-lg mb-4">
                <div class="badge badge-secondary">Actions</div>
              </h3>
              <div class="space-y-3">
                <%= link_to workout_plan_exercises_path(@workout_plan), 
                    class: "btn btn-outline w-full justify-start gap-3" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 616 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  View All Exercises
                <% end %>
                
                <%= link_to new_workout_plan_exercise_path(@workout_plan), 
                    class: "btn btn-primary w-full justify-start gap-3" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                  </svg>
                  Add New Exercise
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile Bottom Action Bar -->
  <div class="fixed bottom-0 left-0 right-0 bg-base-100 border-t border-base-300 p-4 sm:hidden">
    <div class="flex gap-3">
      <%= link_to workout_plan_exercises_path(@workout_plan), 
          class: "btn btn-outline flex-1 gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 616 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
        View All
      <% end %>
      
      <%= link_to new_workout_plan_exercise_path(@workout_plan), 
          class: "btn btn-primary flex-1 gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add Exercise
      <% end %>
    </div>
  </div>

  <!-- Mobile Bottom Padding -->
  <div class="h-20 sm:hidden"></div>
</div>