<div class="container mx-auto max-w-2xl">
  <%= form_with(model: workout_plan, local: true) do |form| %>
    <% if workout_plan.errors.any? %>
      <div class="alert alert-error mb-6">
        <svg class="w-6 h-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h3 class="font-bold">Please fix the following errors:</h3>
          <ul class="list-disc list-inside mt-2">
            <% workout_plan.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-6">
          <div class="bg-primary text-primary-content rounded-full w-12 h-12 flex items-center justify-center text-center">
            <span class="text-xl">ðŸ’ª</span>
          </div>
          <%= workout_plan.persisted? ? "Edit Workout Plan" : "Create New Workout Plan" %>
        </h2>

        <div class="form-control w-full">
          <%= form.label :name, class: "label" do %>
            <span class="label-text text-lg font-medium">Plan Name</span>
            <span class="label-text-alt text-error">Required</span>
          <% end %>
          <%= form.text_field :name, 
              placeholder: "e.g., Upper Body Strength, Morning Cardio, Full Body Workout",
              class: ["input input-bordered input-lg w-full", {
                "input-error": workout_plan.errors[:name].any?
              }] %>
          <% if workout_plan.errors[:name].any? %>
            <label class="label">
              <span class="label-text-alt text-error">
                <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
                <%= workout_plan.errors[:name].first %>
              </span>
            </label>
          <% else %>
            <label class="label">
              <span class="label-text-alt">Give your workout plan a descriptive name</span>
            </label>
          <% end %>
        </div>

        <div class="card-actions justify-end mt-8">
          <div class="join">
            <%= link_to "Cancel", workout_plans_path, 
                class: "btn btn-ghost join-item" %>
            <%= form.submit workout_plan.persisted? ? "Update Plan" : "Create Plan", 
                class: "btn btn-primary join-item gap-2" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
