<div id="<%= dom_id(workout_plan) %>" 
     class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 border-2 border-base-300 hover:border-primary overflow-visible"
     data-plan-name="<%= workout_plan.name %>"
     data-plan-author="<%= workout_plan.user.username %>"
     data-workout-plans-target="planCard">
  
  <div class="card-body">
    <!-- Card Header -->
    <div class="flex items-start justify-between mb-4">
      <div class="flex-1">
        <h2 class="card-title text-xl mb-2">
          <%= workout_plan.name %>
          <% if is_owner %>
            <div class="badge badge-primary">Your Plan</div>
          <% end %>
        </h2>
        <div class="flex items-center gap-2 text-sm opacity-70">
          <div class="avatar placeholder">
            <div class="bg-neutral text-neutral-content rounded-full w-6">
              <span class="text-xs"><%= workout_plan.user.username.first.upcase %></span>
            </div>
          </div>
          by <%= workout_plan.user.username %>
        </div>
      </div>
      
      <!-- Quick Stats -->
      <div class="stats shadow">
        <div class="stat place-items-center">
          <div class="stat-value text-primary text-2xl">
            <%= workout_plan.exercises.count %>
          </div>
          <div class="stat-desc">exercises</div>
        </div>
      </div>
    </div>

    <!-- Exercise Preview -->
    <% if workout_plan.exercises.any? %>
      <div class="mb-4">
        <div class="text-sm opacity-70 mb-2">Recent exercises:</div>
        <div class="flex flex-wrap gap-1">
          <% workout_plan.exercises.limit(3).each do |exercise| %>
            <div class="badge badge-outline badge-sm"><%= exercise.name %></div>
          <% end %>
          <% if workout_plan.exercises.count > 3 %>
            <div class="badge badge-ghost badge-sm">+<%= workout_plan.exercises.count - 3 %> more</div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="alert alert-info mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>No exercises added yet</span>
      </div>
    <% end %>

    <!-- Progress Indicator -->
    <% if is_owner && workout_plan.exercises.any? %>
      <% total_exercises = workout_plan.exercises.count %>
      <% tracked_today = workout_plan.exercises.joins(:exercise_trackings)
                                            .where(exercise_trackings: { performed_at: Date.current.beginning_of_day..Date.current.end_of_day })
                                            .distinct.count %>
      <% if tracked_today > 0 %>
        <div class="mb-4">
          <div class="flex justify-between text-sm mb-2">
            <span class="font-medium">Today's Progress</span>
            <span class="text-primary font-bold"><%= tracked_today %>/<%= total_exercises %></span>
          </div>
          <progress class="progress progress-primary w-full" value="<%= tracked_today %>" max="<%= total_exercises %>"></progress>
        </div>
      <% end %>
    <% end %>

    <!-- Action Buttons -->
    <div class="card-actions justify-between items-center">
      <div class="join">
        <%= link_to workout_plan_exercises_path(workout_plan), 
            data: { turbo_frame: "_top" }, 
            class: "btn btn-primary join-item gap-2" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          View
        <% end %>
        
        <% if is_owner && workout_plan.exercises.any? %>
          <%= link_to new_workout_plan_exercise_exercise_tracking_path(workout_plan, workout_plan.exercises.first), 
              data: { 
                turbo_frame: "_top",
                action: "click->workout-plans#quickTrack"
              }, 
              class: "btn btn-success join-item gap-2" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Track
          <% end %>
        <% end %>
      </div>

      <% if is_owner %>
        <div class="dropdown dropdown-end dropdown-top">
          <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
            </svg>
          </div>
          <ul tabindex="0" class="dropdown-content z-[9999] menu p-2 shadow-lg bg-base-100 rounded-box w-52">
            <li>
              <%= link_to edit_workout_plan_path(workout_plan), data: { turbo_frame: "_top" } do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Edit Plan
              <% end %>
            </li>
            <li>
              <%= link_to new_workout_plan_exercise_path(workout_plan), data: { turbo_frame: "_top" } do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add Exercise
              <% end %>
            </li>
            <li><div class="divider my-0"></div></li>
            <li>
              <%= link_to workout_plan_path(workout_plan), 
                  method: :delete, 
                  data: { 
                    confirm: "Are you sure you want to delete '#{workout_plan.name}'? This action cannot be undone." 
                  }, 
                  class: "text-error" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete Plan
              <% end %>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="tooltip" data-tip="Copy this plan to your account">
          <%= link_to duplicate_workout_plan_path(workout_plan), 
              method: :post,
              data: { 
                confirm: "Copy '#{workout_plan.name}' to your account?" 
              },
              class: "btn btn-ghost btn-circle" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
