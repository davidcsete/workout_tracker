<div id="<%= dom_id(workout_plan) %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= workout_plan.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= workout_plan.user.username %>
  </div>
  <%= link_to "View Exercises", workout_plan_exercises_path(workout_plan), data: { turbo_frame: "_top" }, class: "mt-2 inline-block bg-blue-500 hover:bg-blue-600 text-white py-1 px-3 rounded" %>
  <div>
    <%= link_to "Edit", edit_workout_plan_path(workout_plan), class: "btn btn-secondary" %>
    <%= link_to "Delete", workout_plan_path(workout_plan), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
</div>
