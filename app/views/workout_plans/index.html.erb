<!-- app/views/workout_plans/index.html.erb -->
<div class="container mx-auto px-4 py-4 pb-20" data-controller="workout-plans">
  <!-- Header Section -->
  <div class="hero bg-base-200 rounded-box mb-6">
    <div class="hero-content text-center py-8 sm:py-12">
      <div class="max-w-md">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold">Workout Plans</h1>
        <p class="py-4 sm:py-6 text-sm sm:text-base">Manage and track your fitness routines</p>
        <%= link_to new_workout_plan_path, class: "btn btn-primary btn-lg gap-2 w-full sm:w-auto" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Create New Plan
        <% end %>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <% if @stats[:total_plans] > 0 %>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6">
      <div class="stat bg-base-100 shadow rounded-lg p-4">
        <div class="stat-figure text-primary">
          <svg class="w-6 h-6 sm:w-8 sm:h-8" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="stat-title text-sm">Your Plans</div>
        <div class="stat-value text-primary text-2xl sm:text-3xl"><%= @stats[:total_plans] %></div>
        <div class="stat-desc text-xs">Active workout plans</div>
      </div>
      
      <div class="stat bg-base-100 shadow rounded-lg p-4">
        <div class="stat-figure text-secondary">
          <svg class="w-6 h-6 sm:w-8 sm:h-8" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.293l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="stat-title text-sm">Total Exercises</div>
        <div class="stat-value text-secondary text-2xl sm:text-3xl"><%= @stats[:total_exercises] %></div>
        <div class="stat-desc text-xs">Across all your plans</div>
      </div>
      
      <div class="stat bg-base-100 shadow rounded-lg p-4">
        <div class="stat-figure text-accent">
          <svg class="w-6 h-6 sm:w-8 sm:h-8" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="stat-title text-sm">This Week</div>
        <div class="stat-value text-accent text-2xl sm:text-3xl"><%= @stats[:workouts_this_week] %></div>
        <div class="stat-desc text-xs">Workouts completed</div>
      </div>
    </div>
  <% end %>

  <!-- Search and Filter Section -->
  <div class="card bg-base-100 shadow-lg mb-6">
    <div class="card-body p-4 sm:p-6">
      <div class="flex flex-col sm:flex-row gap-4">
        <div class="form-control flex-1">
          <label class="label pb-2">
            <span class="label-text text-sm">Search Plans</span>
          </label>
          <input type="text" 
                 placeholder="Search workout plans..." 
                 class="input input-bordered w-full h-12" 
                 data-workout-plans-target="searchInput"
                 data-action="input->workout-plans#search">
        </div>
        <div class="form-control">
          <label class="label pb-2">
            <span class="label-text text-sm">Filter</span>
          </label>
          <div class="join w-full sm:w-auto">
            <button class="btn btn-outline join-item flex-1 sm:flex-none h-12" 
                    data-filter="my-plans" 
                    data-workout-plans-target="filterButton"
                    data-action="click->workout-plans#filter">My Plans</button>
            <button class="btn btn-outline join-item flex-1 sm:flex-none h-12" 
                    data-filter="all-plans" 
                    data-workout-plans-target="filterButton"
                    data-action="click->workout-plans#filter">All Plans</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= turbo_frame_tag "workout_plans", class: "w-full" do %>
    <%= render "workout_plans/plans_list", workout_plans: @workout_plans %>
  <% end %>

  <!-- Mobile Floating Action Button -->
  <div class="fixed bottom-20 right-4 z-40 lg:hidden">
    <%= link_to new_workout_plan_path, class: "btn btn-primary btn-circle btn-lg shadow-lg" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
    <% end %>
  </div>
</div>
