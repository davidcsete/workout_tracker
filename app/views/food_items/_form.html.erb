<%= form_with(model: food_item, class: "contents") do |form| %>
  <% if food_item.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(food_item.errors.count, "error") %> prohibited this food_item from being saved:</h2>

      <ul class="list-disc ml-6">
        <% food_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": food_item.errors[:name].none?, "border-red-400 focus:outline-red-600": food_item.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :calories %>
    <%= form.number_field :calories, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": food_item.errors[:calories].none?, "border-red-400 focus:outline-red-600": food_item.errors[:calories].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :protein %>
    <%= form.text_field :protein, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": food_item.errors[:protein].none?, "border-red-400 focus:outline-red-600": food_item.errors[:protein].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :carbs %>
    <%= form.text_field :carbs, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": food_item.errors[:carbs].none?, "border-red-400 focus:outline-red-600": food_item.errors[:carbs].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :fats %>
    <%= form.text_field :fats, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": food_item.errors[:fats].none?, "border-red-400 focus:outline-red-600": food_item.errors[:fats].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :meal_id %>
    <%= form.text_field :meal_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": food_item.errors[:meal_id].none?, "border-red-400 focus:outline-red-600": food_item.errors[:meal_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
